FROM debian:jessie
MAINTAINER Brad Aagaard <baagaard@usgs.gov>

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        g++ \
	make \
        file \
        automake \
        autoconf \
        libtool \
        curl \
        swig \
        python-dev \
	libpython2.7 \
        python-setuptools \
        zlib1g-dev \
        git \
	ca-certificates \
        libcppunit-dev \
	libproj-dev \
	proj-bin \
	proj-data \
	libmpich-dev \
	mpich \
    && rm -fr /var/lib/apt /var/lib/dpkg /var/lib/cache /var/lib/log

#	openmpi-common \
#	openmpi-bin \
#	libopenmpi-dev \
#	ssh

    
ENV PYTHON_VERSION 2.7

CMD /bin/bash
